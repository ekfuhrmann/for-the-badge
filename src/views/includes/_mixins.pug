mixin featured-badge(name, color)
  .badge
    .container
      img(src=`images/featured/featured-${name}.svg`)
      a.copy.imageurl(class=`${color}` data-clipboard-text=`https://for-the-badge-ef.netlify.app/images/badges/${name}.svg`)
      a.copy.markdown(class=`${color}` data-clipboard-text=`[![forthebadge](https://for-the-badge-ef.netlify.app/images/badges/${name}.svg)](https://for-the-badge-ef.netlify.app/)`)
